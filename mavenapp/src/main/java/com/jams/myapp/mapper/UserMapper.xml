<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.jams.myapp.dao.UserDao">
	<resultMap id="user" type="com.jams.myapp.entity.User">
        <result column="id" property="id" />
        <result column="password" property="password" />
    </resultMap>  
    <select id="findUserById" parameterType="String" resultType="com.jams.myapp.entity.User">  
        select user_name as id ,password from t_user where user_name=#{id}  
    </select>
    <select id="listAllUsers" resultMap="user">  
        select user_name as id ,password from t_user  
    </select>    
</mapper>   
